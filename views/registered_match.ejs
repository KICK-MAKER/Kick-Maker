<body>
<!--HEADER-->
  <header>
    <%- include ("./header.ejs") %>
  </header>

    <section class="Matches">
      <h1>등록한 경기 목록</h1>
      <div class="matchedInfo__card">
        <div class="top">
          <div class="match_date">날짜</div>
          <div class="match_place">장소</div>
          <div class="match_time_start">경기 시작 시간</div>
          <div class="match_time_end">경기 종료 시간</div>
          <div class="edit_match">수정하기</div>
        </div>
        <% for (var i=0;  i < Matches.length; i++) { %>
          <% if (Matches[i].establishment != '성립'){continue;}; %>
          <% var data = Matches[i]; %>
          <div class="edit">
              <input type="hidden" name="match_date" value="<%= Matches[i].match_date %>">
              <input type="hidden" name="match_place" value="<%= Matches[i].match_place %>">
              <input type="hidden" name="match_time_start" value="<%= Matches[i].match_time_start %>">
              <input type="hidden" name="match_time_end" value="<%= Matches[i].match_time_end %>">
              <div class="match_date"><%= Matches[i].match_date %></div>
              <div class="match_place"><%= Matches[i].match_place %></div>
              <div class="match_time_start"><%= Matches[i].match_time_start %></div>
              <div class="match_time_end"><%= Matches[i].match_time_end %></div>
              <div class="match_edit" onclick="location.href=('/edit-match')">
                수정하기
              </div>
            </form>
          </div>
      <%  } %>
    </section>
</body>
