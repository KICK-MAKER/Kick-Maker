  <title>match_list</title>
</head>
<body>
<!--HEADER-->
  <header>
    <%- include ("./header.ejs") %>
  </header>

    <section class="Team">
      <h1>등록된 경기 목록</h1>
      <div class="matchedInfo__card">
        <div class="top">
          <div class="match_date">날짜</div>
          <div class="match_place">장소</div>
          <div class="match_time_start">경기 시작 시간</div>
          <div class="match_time_end">경기 종료 시간</div>
          <div class="request_match">경기 요청하기</div>
        </div>
        <% for (var i=0;  i < Team.length; i++) { %>
          <% if (Team[i].establishment != '성립'){continue;}; %>
          <% var data = Team[i]; %>
          <div class="edit">
              <input type="hidden" name="match_date" value="<%= Team[i].match_date %>">
              <input type="hidden" name="match_place" value="<%= Team[i].match_place %>">
              <input type="hidden" name="match_time_start" value="<%= Team[i].match_time_start %>">
              <input type="hidden" name="match_time_end" value="<%= Team[i].match_time_end %>">
              <div class="match_date"><%= Team[i].match_date %></div>
              <div class="match_place"><%= Team[i].match_place %></div>
              <div class="match_time_start"><%= Team[i].match_time_start %></div>
              <div class="match_time_end"><%= Team[i].match_time_end %></div>
              <div class="match_edit" onclick="location.href=('/edit-match')">
                수정하기
              </div>
            </form>
          </div>
      <%  } %>
    </section>
</body>
